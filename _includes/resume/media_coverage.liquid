<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign media = data[1] | sort: 'year' | reverse %}
  {% for content in media %}
    <li class="list-group-item">
      <div class="row">
        <!-- Year badge (left) -->
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% assign date = content.year %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ date }}
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Body (right) -->
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.url %}
              <a href="{{ content.url }}">{{ content.title | default: content.outlet }}</a>
            {% else %}
              {{ content.title | default: content.outlet }}
            {% endif %}
          </h6>

          {% comment %}
            Only show outlet line if we actually had a separate title.
            If there is no title, the outlet is already used above.
          {% endcomment %}
          {% if content.title %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
              {{ content.outlet }}{% if content.type %} Â· {{ content.type }}{% endif %}
            </h6>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
